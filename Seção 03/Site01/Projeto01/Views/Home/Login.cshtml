@model Site01.Models.Usuario

@{
    ViewBag.title = "Tela Inicial";
}
@{
    Layout = "_Layout"; <!--o sistema sabe que tem que buscar na pasta ~/Views/Shared/-->
}


<form method="post" action="/home/login">
    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" class="form-control" id="email" name="email" placeholder="Digite seu e-mail">
        @Html.ValidationMessage("email")
    </div>
    <div class="form-group">
        <label for="Senha">Senha:</label>
        <input type="password" class="form-control" id="Senha" name="Senha" placeholder="Digite sua Senha">
        @Html.ValidationMessage("nome")
    </div>
    <button type="submit" class="btn btn-primary">Logar</button>
</form>
@ViewBag.Mensagem
